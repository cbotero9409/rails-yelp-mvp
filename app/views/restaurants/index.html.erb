<% @restaurants.each do |restaurant| %>
  <div class="row">
    <div class="col-12">
      <h2>* <%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
      <% link_to "Delete", restaurant_path(restaurant),
        data: {
          turbo_method: :delete,
          turbo_confirm: 'Are you sure?'
        }
      %>
    </div>
  </div>
<% end %>
